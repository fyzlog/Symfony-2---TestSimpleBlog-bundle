{% extends 'TestSimpleBlogBundle::layout.html.twig' %}

{% block content -%}
    <div class="row">
        <h1 class="col-md-10 col-md-offset-2">Simple blog</h1>
    </div>
    <div class="row">
        <h2 class="col-md-10 col-md-offset-2">Edit post</h1>
    </div>

		{{ form_start(edit_form) }}
				{{ form_errors(edit_form) }}
			<div class="row">
					<div class="form-group col-md-10 col-md-offset-2">
							{{ form_label(edit_form.title) }}
							{{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(edit_form.title) }}
					</div>
					<div class="form-group col-md-10 col-md-offset-2">
							{{ form_label(edit_form.content) }}
							{{ form_widget(edit_form.content, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
							{{ form_errors(edit_form.content) }}
					</div>
					<div class="form-group col-md-10 col-md-offset-2">
							{{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
							<a class="btn btn-warning" href="{{ path('post') }}">Back to list</a>
					</div>
			</div>
		{{ form_end(edit_form) }}
{% endblock %}

